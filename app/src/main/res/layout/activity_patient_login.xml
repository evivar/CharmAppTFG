<?xml version="1.0" encoding="utf-8" standalone="no"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/titleLbl"
        android:layout_width="0dp"
        android:layout_height="182dp"
        android:layout_gravity="center"
        android:background="@drawable/bottomroundedcard"
        android:fontFamily="@font/muli"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="80sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="CHARM" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="57dp"
        android:background="@drawable/background"
        android:paddingTop="0dp"
        android:textAlignment="center"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="40dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/titleLbl">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="73dp" />

            <EditText
                android:id="@+id/emailTxt_patientLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#000000"
                android:drawableStart="@drawable/usericon"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="@string/activity_patient_login_emailTxt_patientLogin_hint"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:maxHeight="24dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="#000000"
                android:textColorHighlight="#78D1D2"
                android:textColorHint="#000000"
                android:textColorLink="#78D1D2" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="14dp" />

            <EditText
                android:id="@+id/passwordTxt_patientLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#000000"
                android:drawableStart="@drawable/passicon"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="@string/activity_patient_login_passwordTxt_patientLogin_hint"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:maxHeight="24dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="#000000"
                android:textColorHighlight="#78D1D2"
                android:textColorHint="#000000"
                android:textColorLink="#78D1D2" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <Button
                android:id="@+id/logInBtn_patientLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/roundedbutton"
                android:fontFamily="@font/muli"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/activity_patient_login_logInBtn_patientLogin_text"
                android:textStyle="bold" />

            <Button
                android:id="@+id/registerBtn_patientLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/roundedbutton"
                android:fontFamily="@font/muli"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/activity_patient_login_registerBtn_patientLogin_text"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
