<?xml version="1.0" encoding="utf-8" standalone="no"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.fragments.doctorFragments.PainQualityFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cualidadDelDolorLbl_painQuality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/fragment_pain_quality_cualidadDelDolorLbl_painQuality_text"
                android:textColor="#000000"
                android:textSize="20sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/locationLbl_painQuality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_pain_quality_locationLbl_painQuality_text" />

                <RadioGroup
                    android:id="@+id/locationRGroup_painQuality"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/locationRightRButton_painQuality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="hemicraneal-derecho"
                        android:text="@string/fragment_pain_quality_locationRightRButton_painQuality_text" />

                    <RadioButton
                        android:id="@+id/locationRLeftRButton_painQuality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="hemicraneal-izquierdo"
                        android:text="@string/fragment_pain_quality_locationRLeftRButton_painQuality_text" />

                    <RadioButton
                        android:id="@+id/locationBothRButton_painQuality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="ambas"
                        android:text="@string/fragment_pain_quality_locationBothRButton_painQuality_text" />

                </RadioGroup>

                <TextView
                    android:id="@+id/kindLbl_painQuality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_pain_quality_kindLbl_painQuality_text" />

                <RadioGroup
                    android:id="@+id/kindRGroup_painQuality"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/kindOppresiveRButton_painQuality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="Opresivo"
                        android:text="@string/fragment_pain_quality_kindOppresiveRButton_painQuality_text" />

                    <RadioButton
                        android:id="@+id/kindPulsatileRButton_painQuality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="Pulsatil"
                        android:text="@string/fragment_pain_quality_kindPulsatileRButton_painQuality_text" />

                    <RadioButton
                        android:id="@+id/kindStingingeRButton_painQuality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="Punzante"
                        android:text="@string/fragment_pain_quality_kindStingingeRButton_painQuality_text" />

                    <RadioButton
                        android:id="@+id/kindBurnerRButton_painQuality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="Quemante"
                        android:text="@string/fragment_pain_quality_kindBurnerRButton_painQuality_text" />

                    <RadioButton
                        android:id="@+id/kindElectricRButton_painQuality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="Eléctrico"
                        android:text="@string/fragment_pain_quality_kindElectricRButton_painQuality_text" />

                </RadioGroup>

                <TextView
                    android:id="@+id/symptomsLbl_painQuality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fragment_pain_quality_symptomsLbl_painQuality_text" />

                <LinearLayout
                    android:id="@+id/symptomsCBoxes_painQuality"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:tag="holiwiiiiiASDFDSAFADSF">

                    <CheckBox
                        android:id="@+id/symptomsEyeRednessCBox_painQuality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="Enrojecimiento-Ocular"
                        android:text="@string/fragment_pain_quality_symptomsEyeRednessCBox_painQuality_text" />

                    <CheckBox
                        android:id="@+id/symptomsDropCBox_painQuality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="Caída-Párpado"
                        android:text="@string/fragment_pain_quality_symptomsDropCBox_painQuality_text" />

                    <CheckBox
                        android:id="@+id/symptomsTearingCBox_painQuality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="Lagrimeo"
                        android:text="@string/fragment_pain_quality_symptomsTearingCBox_painQuality_text" />

                    <CheckBox
                        android:id="@+id/symptomsCongestionCBox_painQuality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="Congestión nasal"
                        android:text="@string/fragment_pain_quality_symptomsCongestionCBox_painQuality_text" />

                    <CheckBox
                        android:id="@+id/symptomsRhinorrheaCBox_painQuality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="Rinorrea"
                        android:text="@string/fragment_pain_quality_symptomsRhinorrheaCBox_painQuality_text" />

                    <CheckBox
                        android:id="@+id/symptomsPlugginCBox_painQuality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="Taponamiento ótico"
                        android:text="@string/fragment_pain_quality_symptomsPlugginCBox_painQuality_text" />

                    <CheckBox
                        android:id="@+id/symptomsFacialRednessCBox_painQuality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="Enrojecimiento facial"
                        android:text="@string/fragment_pain_quality_symptomsFacialRednessCBox_painQuality_text" />

                    <CheckBox
                        android:id="@+id/symptomsSweatingCBox_painQuality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="Sudoración facial"
                        android:text="@string/fragment_pain_quality_symptomsSweatingCBox_painQuality_text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/nextBtn_painQuality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/roundedbutton"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="@string/fragment_pain_quality_nextBtn_painQuality_text"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/backBtn_painQuality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/roundedbutton"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="@string/fragment_pain_quality_backBtn_painQuality_text"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
